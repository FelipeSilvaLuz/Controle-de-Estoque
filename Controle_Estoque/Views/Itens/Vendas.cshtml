@{
    ViewData["Title"] = "Vendas";
}

<div id="tabsTop-5" class="col-md-10 espaco_conteudo">
    <div class="row">
        <div class="col-md-12">
            <label>Nome do Produto Selecionado</label>
            <input style="height:50px;" class="form-control campoNomeProdutoVenda" type="text" disabled />
            <br />
        </div>
    </div>

    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12">
                <label>Código</label>
                <input style="height:50px; font-size:20px;" class="form-control campoCodigoVenda" type="text" />
                <br />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <label>Quantidade</label>
                <input style="height:50px; font-size:20px;" class="form-control campoQuantidadeVenda" type="text" />
                <br />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <label>Valor Unitário</label>
                <input style="height:50px; font-size:20px;" class="form-control campoValorUnitarioVenda" type="text" disabled />
                <br />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <label>Valor Total</label>
                <input style="height:50px; font-size:20px;" class="form-control campoValorTotalProdutoVenda" disabled />
                <br />
            </div>
            <div class="col-md-12">
                <label>Total Geral</label>
                <input style="height:50px; font-size:20px;" class="form-control" disabled />
                <br />
            </div>
        </div>
    </div>

    <div class="col-md-8" style="overflow: auto; height: 380px;">
        <div class="col-md-12">
            <label>Registro das Vendas Atuais</label>
            <table class="table table-sm" id="tbRegistroVenda" style="font-size:14px;">
                <thead>
                    <tr>
                        <th style="width:10px;">Nº</th>
                        <th style="width:180px;">Produto</th>
                        <th style="width:60px;">Qtd</th>
                        <th style="width:60px;">Valor Total</th>
                        <th style="width:10px;">Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <label>Mensagens</label>
            <input style="height:50px; font-size:20px;" class="form-control campoObservacaoVenda" disabled />
            <br />
        </div>
    </div>

    <div class="row col-md-12">
        <div style="float:right; margin-bottom: 50px">
            <button type="button" class="btn btn-light btnFinalizarVenda" style="height:70px; font-size:20px; border:solid;">
                <span class="glyphicon glyphicon-credit-card"></span> Finalizar Venda
            </button>

            <button type="button" class="btn btn-light venderProduto" style="height:70px; font-size:20px; border:solid;">
                <span class="glyphicon glyphicon-shopping-cart"></span> Vender
            </button>

            <button type="button" class="btn btn-light" style="height:70px; font-size:20px; border:solid;">
                <span class="glyphicon glyphicon-remove"></span> Cancelar Venda
            </button>

            <button type="button" class="btn btn-light" style="height:70px; font-size:20px; border:solid;">
                <span class="glyphicon glyphicon-search"></span> Consultar Preço
            </button>
        </div>
    </div>
</div>

<input id="urlBuscarPorCodigoParaVenda" type="hidden" value="@Url.Action("BuscarProdutoPorCodigo", "Vendas")" />
<input id="urlFinalizarVenda" type="hidden" value="@Url.Action("RegistrarVenda", "Vendas")" />

<script src="~/js/Itens/vendas.js"></script>